<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- ── Console appender with structured fields ────────────────────────── -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} [%thread] %-5level [%X{requestId:-NO_REQ}] [%X{method:-} %X{path:-}] %logger{36} - %msg%n</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>

  <!-- ── Profile-specific log levels ───────────────────────────────────── -->
  <springProfile name="local">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
    <logger name="com.ledgerxlite" level="DEBUG"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
  </springProfile>

  <springProfile name="prod">
    <root level="WARN">
      <appender-ref ref="CONSOLE"/>
    </root>
    <logger name="com.ledgerxlite" level="INFO"/>
  </springProfile>

  <!-- Default (no profile) -->
  <springProfile name="!local &amp; !prod">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
    <logger name="com.ledgerxlite" level="DEBUG"/>
  </springProfile>

</configuration>
