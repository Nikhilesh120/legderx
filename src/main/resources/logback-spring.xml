<?xml version="1.0" encoding="UTF-8"?>
<!--
    logback-spring.xml - Comprehensive logging configuration
    
    Features:
    - Profile-aware logging (local, docker, prod, test)
    - Console output (with colors in local)
    - File output with rotation
    - Separate log files for different log levels
    - Step-by-step transaction logging
    - MDC (Mapped Diagnostic Context) for request tracing
-->
<configuration>

    <!-- ────────────────────────────────────────────────────────────────────
         PROPERTIES
    ──────────────────────────────────────────────────────────────────── -->
    
    <!-- Log directory - configurable via environment variable -->
    <property name="LOG_DIR" value="${LOG_DIR:-./logs}" />
    
    <!-- Application name for log identification -->
    <property name="APP_NAME" value="ledgerx-lite" />
    
    <!-- Log file patterns -->
    <property name="FILE_LOG_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [traceId=%X{traceId:-}] [userId=%X{userId:-}] - %msg%n" />
    
    <property name="CONSOLE_LOG_PATTERN" 
              value="%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) [%X{traceId:-}] - %msg%n" />

    <!-- ────────────────────────────────────────────────────────────────────
         APPENDERS - CONSOLE
    ──────────────────────────────────────────────────────────────────── -->

    <!-- Pretty console for local development -->
    <appender name="CONSOLE_PRETTY" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- JSON console for production (log aggregators) -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <includeCallerData>false</includeCallerData>
            <customFields>{"application":"${APP_NAME}"}</customFields>
        </encoder>
    </appender>

    <!-- ────────────────────────────────────────────────────────────────────
         APPENDERS - FILE
    ──────────────────────────────────────────────────────────────────── -->

    <!-- Main application log file -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/application.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Daily rollover with size limit -->
            <fileNamePattern>${LOG_DIR}/application-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Error-only log file for quick issue identification -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Transaction audit log - separate file for financial operations -->
    <appender name="FILE_TRANSACTION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/transactions.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/transactions-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>365</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Security audit log - authentication and authorization events -->
    <appender name="FILE_SECURITY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/security.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/security-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>365</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Performance log - slow operations tracking -->
    <appender name="FILE_PERFORMANCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/performance.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/performance-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ────────────────────────────────────────────────────────────────────
         ASYNC WRAPPERS (for better performance)
    ──────────────────────────────────────────────────────────────────── -->

    <appender name="ASYNC_FILE_ALL" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE_ALL" />
    </appender>

    <appender name="ASYNC_FILE_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE_ERROR" />
    </appender>

    <appender name="ASYNC_FILE_TRANSACTION" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE_TRANSACTION" />
    </appender>

    <appender name="ASYNC_FILE_SECURITY" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE_SECURITY" />
    </appender>

    <!-- ────────────────────────────────────────────────────────────────────
         SPECIALIZED LOGGERS
    ──────────────────────────────────────────────────────────────────── -->

    <!-- Transaction service logger - routes to transaction log file -->
    <logger name="com.ledgerxlite.service.TransactionService" level="INFO" additivity="true">
        <appender-ref ref="ASYNC_FILE_TRANSACTION" />
    </logger>

    <!-- Security logger - routes to security log file -->
    <logger name="com.ledgerxlite.security" level="INFO" additivity="true">
        <appender-ref ref="ASYNC_FILE_SECURITY" />
    </logger>

    <!-- Performance logger -->
    <logger name="com.ledgerxlite.aspect.PerformanceAspect" level="INFO" additivity="true">
        <appender-ref ref="FILE_PERFORMANCE" />
    </logger>

    <!-- ────────────────────────────────────────────────────────────────────
         PROFILE-SPECIFIC CONFIGURATIONS
    ──────────────────────────────────────────────────────────────────── -->

    <!-- LOCAL PROFILE - Maximum verbosity with file logging -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PRETTY" />
            <appender-ref ref="ASYNC_FILE_ALL" />
            <appender-ref ref="ASYNC_FILE_ERROR" />
        </root>
        
        <logger name="com.ledgerxlite" level="DEBUG" />
        <logger name="com.ledgerxlite.service" level="DEBUG" />
        <logger name="com.ledgerxlite.security" level="DEBUG" />
        <logger name="com.ledgerxlite.controller" level="DEBUG" />
        
        <!-- SQL logging in local -->
        <logger name="org.hibernate.SQL" level="DEBUG" />
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" />
        <logger name="org.hibernate.orm.jdbc.bind" level="TRACE" />
        
        <!-- Show Flyway migrations -->
        <logger name="org.flywaydb" level="INFO" />
        
        <!-- Transaction management -->
        <logger name="org.springframework.transaction" level="DEBUG" />
        <logger name="org.springframework.orm.jpa" level="DEBUG" />
    </springProfile>

    <!-- DOCKER PROFILE - Moderate logging with file output -->
    <springProfile name="docker">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PRETTY" />
            <appender-ref ref="ASYNC_FILE_ALL" />
            <appender-ref ref="ASYNC_FILE_ERROR" />
        </root>
        
        <logger name="com.ledgerxlite" level="INFO" />
        <logger name="com.ledgerxlite.service.TransactionService" level="DEBUG" />
        <logger name="com.ledgerxlite.security" level="INFO" />
        
        <!-- SQL logging OFF in docker -->
        <logger name="org.hibernate.SQL" level="WARN" />
        <logger name="org.flywaydb" level="INFO" />
    </springProfile>

    <!-- PRODUCTION PROFILE - Minimal logging with structured JSON -->
    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="CONSOLE_JSON" />
            <appender-ref ref="ASYNC_FILE_ALL" />
            <appender-ref ref="ASYNC_FILE_ERROR" />
        </root>
        
        <!-- Application logs at INFO -->
        <logger name="com.ledgerxlite" level="INFO" />
        <logger name="com.ledgerxlite.service.TransactionService" level="INFO" />
        <logger name="com.ledgerxlite.security" level="INFO" />
        
        <!-- Never log SQL in production -->
        <logger name="org.hibernate.SQL" level="ERROR" />
        <logger name="org.hibernate.type" level="ERROR" />
        <logger name="org.flywaydb" level="WARN" />
    </springProfile>

    <!-- TEST PROFILE - Minimal output, errors only -->
    <springProfile name="test">
        <root level="WARN">
            <appender-ref ref="CONSOLE_PRETTY" />
        </root>
        
        <logger name="com.ledgerxlite" level="INFO" />
        <logger name="org.hibernate.SQL" level="WARN" />
        <logger name="org.springframework" level="WARN" />
    </springProfile>

    <!-- DEFAULT (no profile) -->
    <springProfile name="!local &amp; !docker &amp; !prod &amp; !test">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PRETTY" />
            <appender-ref ref="ASYNC_FILE_ALL" />
            <appender-ref ref="ASYNC_FILE_ERROR" />
        </root>
        
        <logger name="com.ledgerxlite" level="INFO" />
        <logger name="org.hibernate.SQL" level="WARN" />
    </springProfile>

</configuration>
